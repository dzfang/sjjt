<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<!-- 组织结构表 -->
	<changeSet id="20160401164300" author="zhen.pan">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="T_ORG" />
			</not>
		</preConditions>
		<createTable tableName="T_ORG">
			<column name="id" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="VARCHAR(80)">
				<constraints nullable="false" />
			</column>
			<column name="describer" type="VARCHAR(300)" />
			<column name="type" type="INT" />
			<column name="code" type="VARCHAR(22)" />
			<column name="parent_id" type="BIGINT" />
			<column name="createtime" type="DATETIME" defaultValueDate="${now}" />
		</createTable>
		<!-- 
		<addForeignKeyConstraint baseColumnNames="id"
			baseTableName="T_ORG" constraintName="fk_org_id"
			referencedColumnNames="parent_id" referencedTableName="T_ORG" />
		 -->
		<insert tableName="T_ORG">
			<column name="name">Test</column>
			<column name="describer">Test</column>
			<column name="type">10</column>
			<column name="code">00</column>
		</insert>
	</changeSet>
</databaseChangeLog>
