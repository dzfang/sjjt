<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<!-- 角色表 -->
	<changeSet id="20160510194800" author="zhen.pan">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="T_CODE_TYPE" />
			</not>
		</preConditions>
		<createTable tableName="T_ROLE">
			<column name="ID" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="NAME" type="VARCHAR(60)">
				<constraints nullable="true" />
			</column>
			<column name="DESC" type="VARCHAR(120)">
				<constraints nullable="false" />
			</column>
			<column name="DELETE_FLAG" type="INT(6)" />
			<column name="CREATETIME" type="DATETIME" defaultValueDate="${now}" />
		</createTable>
	</changeSet>
</databaseChangeLog>
